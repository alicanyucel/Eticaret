@using Eticaret.Entities.Concrete
@model Eticaret.MVCUI.Models.ProductlistViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}
<html>
<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css"/>
 
</head>
<body>
    <div>
        <table class="table table-responsive" id="dataTables">
            <tr>
                <td>Urun Adı</td>
                <td>Urun Fiyat</td>
                <td>Stok Adedi</td>
                <td></td>
            </tr>
            @foreach (var product in Model.Products)
           {
               <tr>
                   <td>@product.ProductName</td>
                   <td>@product.UnitPrice</td>
                   <td>@product.UnitsInStock</td>
                   <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">ekle</a></td>
               </tr>
           }
        </table>
    </div>
    <product-list-pager
    current-category="@Model.CurrentCategory"
    current-page="@Model.CurrentPage"
    page-count="@Model.PageCount"
    page-size="@Model.PageSize">
    </product-list-pager>
     
</body>
</html>